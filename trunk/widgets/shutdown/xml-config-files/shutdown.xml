<shutdown>
  <actions width="30%" height="10%" align="center">
    <action>
      <name>Shutdown</name>
      <exec>ngc</exec>
      <arg>-0</arg>
      <logo>./logos/system-shutdown.png</logo>
    </action>
    <action>
      <name>Reboot</name>
      <exec>ngc</exec>
      <arg>-6</arg>
      <logo>./logos/system-restart.png</logo>
    </action>
    <action>
      <name>Suspend</name>
      <exec></exec>
      <arg></arg>
      <logo>./logos/system-suspend.png</logo>
    </action>
  </actions>
</shutdown>
