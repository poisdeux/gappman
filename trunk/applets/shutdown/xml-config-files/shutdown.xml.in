<shutdown>
  <cachelocation>/tmp/</cachelocation>
  <actions width="30%" height="10%" align="center">
    <action>
      <name>Shutdown</name>
      <printlabel>1</printlabel>
      <exec>shutdown</exec>
			<arg>-h</arg>
      <logo>@datadir@/system-shutdown.png</logo>
    </action>
    <action>
      <name>Reboot</name>
      <printlabel>1</printlabel>
      <exec>shutdown</exec>
			<arg>-r</arg>
      <logo>@datadir@/system-restart.png</logo>
    </action>
    <action>
      <name>Suspend</name>
      <printlabel>1</printlabel>
      <exec></exec>
      <arg></arg>
      <logo>@datadir@/system-suspend.png</logo>
    </action>
  </actions>
</shutdown>
